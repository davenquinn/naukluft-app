.location-group
  position: relative

.location-group-title
  position absolute
  font-size 2em
  color #888
  background-color white
  padding-left 3px
  padding-right 8px 

.section-page.summary-sections
  .location-group#Tsams
    margin-right 0

  .section-header h2
    margin-top 0
    position absolute
    left: 4px
    top: 6px
    text-align right

  .section-header.subtle h2
    font-weight: 400
    font-size 1em

.section-outer
  position relative

:local(.section-children)
  position absolute
  top 0
  left 0

:global
  div.section-page#generalized-sections svg
    margin-bottom 1em

  div.grouped-sections
    display flex
    flex-direction row

  div.edit-overlay
    div.cursor
      position absolute
      border 2px solid black
      z-index 20

.location-group
  position relative
  &.chemostratigraphy
    margin 35px 2em 0 2em

.section-header
  height: 30px

.isotopes-column
  margin-top -10px
  .section-header
    height 30px
