.location-group
  position: relative

.location-group-title
  position absolute
  font-size 2em
  color #888
  background-color white
  padding-left 3px
  padding-right 8px 

.section-page.summary-sections
  .location-group#Tsams
    margin-right 0

  .section-header h2
    margin-top 0
    position absolute
    left: 4px
    top: 6px
    text-align right

  .section-header.subtle h2
    font-weight: 400
    font-size 1em

.section-outer
  position relative

:local(.section-children)
  position absolute
  top 0
  left 0

:global
  div.section-page#generalized-sections svg
    margin-bottom 1em

  div.grouped-sections
    display flex
    flex-direction row

  div.edit-overlay
    div.cursor
      position absolute
      border 2px solid black
      z-index 20

  #summary-sections-legend
    position absolute
    left 800px
    top 0
    h1, h2, h3
      line-height inherit
    .legend-inner
      display flex
      flex-direction row
      &>div
        flex 1
      &>div
        margin-right 1em
    margin-top 0
    width 50em
    z-index 12
    align-items top
    background-color white
    h2
      font-size 1.5em

    h4
      margin-top 0em
    div.facies .header
      display flex
      flex-direction row
      align-items center
      p.name
        margin 0.2em 0
        flex-grow 1
        margin-right 1em

    p.note
      font-style italic

    div.facies-description
      flex-grow 2
    div.facies-description-inner
      display flex
      flex-direction row
      margin 0 -1em
      &>div
        margin 0 1em

    div.symbol-legend>div.symbol-legend
      img
        width 30px
        height 30px
      &>div
        display flex
        flex-direction row
        align-items center
        justify-content middle
        span
          flex-grow 1
          display block
          margin-left 1em

    p.explanation
      display flex
      flex-direction row
      span.key
        font-size 1.5em
      span.description
        flex-grow 1
        margin-left 1em

.location-group
  position relative
  &.chemostratigraphy
    margin 35px 2em 0 2em

.section-header
  height: 30px

.isotopes-column
  margin-top -10px
  .section-header
    height 30px

@require "./chemostrat/main.module.styl"
