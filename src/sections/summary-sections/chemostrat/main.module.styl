.isotope-scale-axis
  :global(.vx-line)
    stroke: #aaa
  text
    fill: #888

.location-group.chemostratigraphy
  margin-right: 0
  .isotopes-column
    margin-right 1em
    position relative
    g.scale
      g.tick
        line
          stroke-width 1px
          stroke #ddd
        &.zero
          line
            stroke #ccc
            stroke-width 2px
        text
          text-anchor middle
          fill #888
          font-size 10px
          font-style italic



.isotopes-column
  rect.underlay
    fill var(--background-color, white)

  // TODO: this is needed to align the sections properly, unfortunately
  .section-header
    height: var(--section-header-height, 30px)
