@require "~@macrostrat/column-components/dist/column-components.css";

*
  font-family: Montserrat, sans-serif

h1,h2,h3,h4,h5,h6
  font-family: Montserrat, sans-serif
  font-weight 500

.page.generalized-sections-static
  margin -20px
  width max-content
  height max-content
  overflow show
  position relative
  .section-header h2
    margin-bottom -5px
  .panel-container
    overflow inherit
    height inherit
    #section-pane
      height inherit
    #section-page-inner
      margin 0
      padding 0 !important
  .lithostratigraphy-names
    margin-top 44px
  .location-group
    margin-bottom 10px
    &.chemostratigraphy
      margin 10px -54px -2em -4px
      h2
        font-size 1em
  #section-pane, .section-pane
    overflow: inherit
    height max-content
    width max-content

@page {
  margin: 0cm;
}

.legend
  position absolute
  left 700px
  top 5em
  display flex
  flex-direction row
  h1, h2, h3, h4
    line-height inherit
    margin-bottom 0.5em
  p,span
    font-size 12px
  .legend-inner
    display flex
    flex-direction row
    &>div
      flex 1
    &>div
      margin-right 1em

  &>.facies
    margin-right 3em
  margin-top 0
  width 40em
  z-index 12
  align-items top
  background-color white
  h2
    font-size 1.2em

  h4
    margin-top 0em
  div.facies .header
    display flex
    flex-direction row
    align-items center
    p.name
      margin 0.2em 0
      flex-grow 1
      margin-right 1em

  p.note
    font-style italic

  div.facies-description
    flex-grow 2
  div.facies-description-inner
    display flex
    flex-direction row
    margin 0 -1em
    &>div
      flex 1
      margin 0 1em
      &:last-child
        flex-grow 1.2
        margin-top -2em
    .color-swatch
      margin-bottom 0.5em

  div.symbol-legend
    img
      width 30px
      height 30px
    &>div
      display flex
      flex-direction row
      align-items center
      justify-content middle
      span
        flex-grow 1
        display block
        margin-left 1em

  p.explanation
    display flex
    flex-direction row
    span.key
      font-size 1.5em
    span.description
      flex-grow 1
      margin-left 1em
