@require "~@macrostrat/column-components/dist/column-components.css";

div.bottom-row
  display flex
  flex-direction row

div.sequence
  display flex
  flex-direction row
  margin-top 1em

.section-pane.detail-section
  height max-content

.figure-part
  display flex
  flex-direction row
  h2
    margin-top 0
    margin-right 0.5em
  margin-right 0.5em

/// Extra styles below this point

.page.section-page
  width: 100%
  flex-grow: 1
  display: flex
  flex-direction: row

  .left-panel
    flex 1
    position relative

.section-pane
  position: relative
  flex: 1
  display: flex
  flex-direction: column

div.section-column
  flex: flex-grow
  position: relative
  div.section-locator
    position: relative
    height: 0
  div.section-locator-inner
    position: absolute

text
  font-family: 'Helvetica Neue'
  font-size: 10

div.images
  position: relative

.y.axis
  text
    text-anchor: middle
    transform: rotate(-90deg) translate(8px,-12px)
    font-weight: 400
  //transform: rotate(90deg)
