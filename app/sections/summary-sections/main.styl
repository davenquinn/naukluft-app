.section-page.summary-sections
  .location-group
    position relative
    &#Ubisis
      h1
        top 560px
    &#Tsams
      h1
        top 370px
    h1
      position absolute
      top -20px
      left 0
      font-size 2em
      color #888

    &.chemostratigraphy
      margin 2em 2em 0 2em
  .section-container h2
    position absolute
    left: -5px
    top: 8px
    text-align right
  .section-header.subtle h2
    font-weight: 400
    font-size 1em

@media print
  div.cursor
    display: none
  ul.controls, #settings
    display: none
  #section-page-inner
    transform: scale(5)
    transform-origin: top left
  #section-pane, #panel-container
    overflow: auto !important

:global
  div.section-page#generalized-sections svg
    margin-bottom 1em

  div.grouped-sections
    display flex
    flex-direction row


  div.edit-overlay
    div.cursor
      position absolute
      border 2px solid black
      z-index 20

  #summary-sections-legend
    h1, h2, h3
      line-height inherit
    .legend-inner
      display flex
      flex-direction row
      &>div
        flex 1
      &>div
        padding 1em
    margin 2em 4em
    margin-top 0
    width 50em
    z-index 12
    align-items top
    background-color white
    h2
      font-size 1.5em

    h4
      margin-top 0em
    div.facies .header
      display flex
      flex-direction row
      align-items center
      p.name
        margin 0.2em 0
        flex-grow 1
        margin-right 1em

    p.note
      font-style italic

    div.facies-description
      flex-grow 2
    div.facies-description-inner
      display flex
      flex-direction row
      margin 0 -1em
      &>div
        margin 0 1em

    div.symbol-legend>div.symbol-legend
      img
        width 30px
        height 30px
      &>div
        display flex
        flex-direction row
        align-items center
        justify-content middle
        span
          flex-grow 1
          display block
          margin-left 1em

@require "./chemostrat/main.styl"
